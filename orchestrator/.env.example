# Orchestration Engine Configuration

# Node Environment
NODE_ENV=development
PORT=3001

# PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/blueprint_orchestrator
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Claude API Configuration
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_CONTEXT_WINDOW=200000

# Git Configuration
GIT_REPO_PATH=../
GIT_BRANCH_PREFIX=feature/ai-
GIT_COMMIT_AUTHOR_NAME=AI-Orchestrator
GIT_COMMIT_AUTHOR_EMAIL=orchestrator@blueprint.local
GIT_SIGN_COMMITS=false

# File Monitoring
WATCH_DIR=../product
CHANGE_DEBOUNCE_MS=1000
POLL_INTERVAL_MS=5000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/orchestrator.log

# Quality Gates
ENABLE_TYPESCRIPT_CHECK=true
ENABLE_LINTING=true
ENABLE_TESTING=true
TEST_COVERAGE_THRESHOLD=80
PERFORMANCE_BUDGET_KB=500

# Feature Flags
ENABLE_AGENT_PARALLELIZATION=true
ENABLE_AUTO_DEPLOYMENT=false
ENABLE_COST_TRACKING=true
ENABLE_LEARNING_SYSTEM=false

# Monitoring & Observability
METRICS_ENABLED=true
TRACING_ENABLED=false
TRACING_SAMPLE_RATE=0.1

# Phase 1 Limitations
ENABLE_SINGLE_AGENT_ONLY=true
AGENTS_ENABLED=frontend
